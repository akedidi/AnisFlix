{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    },
    "api/tv-stream.js": {
      "maxDuration": 30
    },
    "api/tv-proxy-m3u8.js": {
      "maxDuration": 30
    },
    "api/tv-proxy-segment.js": {
      "maxDuration": 30
    }
  }
}